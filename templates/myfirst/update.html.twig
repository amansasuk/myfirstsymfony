{% extends 'base.html.twig' %}

{% block title %}Hello MyfirstController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2" style="padding:60px 0px;" >

        {% for message in app.flashes('notice') %}
            <div class="alert alert-success" role="alert">
           {{ message }}
            </div>
        {% endfor %}

            {{ form_start(form) }}
             <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">{{ form_label(form.name) }}</label>
                {{ form_widget(form.name,{'attr':{'class':'form-control'}})}}
                
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">{{ form_label(form.email) }}</label>
                {{ form_widget(form.email,{'attr':{'class':'form-control'}})}}
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">{{ form_label(form.dob) }}</label>
                {{ form_widget(form.dob,{'attr':{'class':'form-control'}})}}
                
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
                
            {{ form_end(form) }}
           
            
            
        </div>
    </div>
 </div
{% endblock %}
